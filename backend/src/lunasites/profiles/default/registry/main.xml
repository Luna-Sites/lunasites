<?xml version="1.0" encoding="utf-8"?>
<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="lunasites"
>

  <!-- CORS Configuration for plone.restapi -->
  <record name="plone.restapi.cors_policy">
    <field type="plone.registry.field.Dict">
      <title>CORS Policy</title>
      <description>CORS policy configuration</description>
      <key_type type="plone.registry.field.ASCIILine" />
      <value_type type="plone.registry.field.TextLine" />
    </field>
    <value>
      <element key="allow_origin">*</element>
      <element key="allow_credentials">true</element>
      <element key="allow_headers">Accept,Accept-Encoding,Authorization,Content-Type,Origin,X-Requested-With</element>
      <element key="allow_methods">DELETE,GET,OPTIONS,PATCH,POST,PUT</element>
      <element key="expose_headers">Content-Length,X-My-Header</element>
      <element key="max_age">3600</element>
    </value>
  </record>

  <!-- Color Schema Configuration -->
  <record name="lunasites.color_schema">
    <field type="plone.registry.field.Dict">
      <title>Site Color Schema</title>
      <description>Global color schema configuration for the website builder</description>
      <key_type type="plone.registry.field.ASCIILine" />
      <value_type type="plone.registry.field.TextLine" />
    </field>
    <value>
      <element key="background_color">#ffffff</element>
      <element key="primary_color">#0070ae</element>
      <element key="secondary_color">#e73d5c</element>
      <element key="header_color">#2c3e50</element>
      <element key="text_color">#333333</element>
      <element key="accent_color">#6bb535</element>
    </value>
  </record>

  <!-- Color Schema Presets -->
  <record name="lunasites.color_schema_presets">
    <field type="plone.registry.field.List">
      <title>Color Schema Presets</title>
      <description>Predefined color schema combinations</description>
      <value_type type="plone.registry.field.Text" />
    </field>
    <value>
      <element>{"name": "Modern Blue", "background_color": "#ffffff", "primary_color": "#0070ae", "secondary_color": "#e73d5c", "header_color": "#2c3e50", "text_color": "#333333", "accent_color": "#6bb535"}</element>
      <element>{"name": "Elegant Dark", "background_color": "#1a1a1a", "primary_color": "#3498db", "secondary_color": "#e74c3c", "header_color": "#2c3e50", "text_color": "#ecf0f1", "accent_color": "#2ecc71"}</element>
      <element>{"name": "Warm Sunset", "background_color": "#fef9e7", "primary_color": "#f39c12", "secondary_color": "#e67e22", "header_color": "#8e44ad", "text_color": "#2c3e50", "accent_color": "#27ae60"}</element>
      <element>{"name": "Cool Mint", "background_color": "#f0fff4", "primary_color": "#16a085", "secondary_color": "#1abc9c", "header_color": "#34495e", "text_color": "#2c3e50", "accent_color": "#9b59b6"}</element>
      <element>{"name": "Professional Gray", "background_color": "#f8f9fa", "primary_color": "#495057", "secondary_color": "#6c757d", "header_color": "#343a40", "text_color": "#212529", "accent_color": "#007bff"}</element>
    </value>
  </record>

  <!-- -*- extra stuff goes here -*- -->

</registry>
